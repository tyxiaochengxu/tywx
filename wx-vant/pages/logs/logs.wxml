<!--logs.wxml-->
<view class="container">
  <view class="box">
    <view>
      WFM登录系统
    </view>
     <van-cell-group class="box-from">
      <van-field
        v-model="username"
        required
        clearable
        label="用户名"
        right-icon="question-o"
        placeholder="请输入用户名"
        wx-click-right-icon="$toast('question')"
      />

      <van-field
        v-model="password"
        type="password"
        label="密码"
        placeholder="请输入密码"
        required
      />
       <van-field
    v-model="sms"
    center
    clearable
    label="短信验证码"
    placeholder="请输入短信验证码"
  >
    <van-button slot="button" size="small" type="primary">发送验证码</van-button>
    </van-field>
     <van-button type="primary" size="large">登录</van-button>
    </van-cell-group>
  </view>
</view>
